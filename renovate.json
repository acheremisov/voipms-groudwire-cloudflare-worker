{
	"$schema": "https://docs.renovatebot.com/renovate-schema.json",
  "lockFileMaintenance": {
    "enabled": true,
    "automerge": true
  },
	"ignoreTests": true,
	"extends": ["config:base"],
	"packageRules": [
		{
			"matchUpdateTypes": ["minor", "patch", "pin", "digest"],
			"automerge": true
		},
		{
			"matchDepTypes": ["devDependencies"],
			"automerge": false
		}
	],
	"platformAutomerge": true
}
